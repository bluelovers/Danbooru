      <thead>
        <tr>
          <th width="80%">Name</th>
          <th width="20%">Count</th>
        </tr>
      </thead>
      <tbody>
        <% @user.favorite_tags.each do |tag| %>
          <tr class="<%= cycle 'even', 'odd' %>">
            <td><%= link_to tag["tag"], :controller => "post", :action => "index", :tags => "fav:#{@user.name} #{tag['tag']}" %></td>
            <td><%= tag["count"] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div id="fav-artists" style="display: none;">
