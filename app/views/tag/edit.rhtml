<% form_tag(:action => "update") do %>
	<label>Tag to Update:</label> <%= text_field "tag", "name" %>
	<%= select "tag", "tag_type", [["General", Tag::TYPE_GENERAL], ["Ambiguous", Tag::TYPE_AMBIGUOUS], ["Artist", Tag::TYPE_ARTIST], ["Character", Tag::TYPE_CHARACTER], ["Copyright", Tag::TYPE_COPYRIGHT]] %>
	<%= submit_tag "Save" %>
<% end %>

<%= render :partial => "footer" %>
