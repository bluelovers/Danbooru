<div id="tag_list">
	<h5>Tags</h5>

	<ul>
		<% [*@tags[:exclude]].each do |tt| %>
			<li><%= tag_link(tt, "-") %></li>
		<% end %>

		<% [*@tags[:include]].each do |tt| %>
			<li><%= tag_link(tt) %></li>
		<% end %>

		<% [*@tags[:related]].each do |tt| %>
			<% Tag.find_related(tt).each do |ttt| %>
				<li><%= tag_link(ttt) %></li>
			<% end %>
		<% end %>
	</ul>
</div>
