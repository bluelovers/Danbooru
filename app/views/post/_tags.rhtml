<div id="tag_list">
	<h5>Tags</h5>
	<!-- google_ad_section_start -->
	<ul>
		<% @tags[:exclude].to_a.each do |tt| %>
			<li><%= tag_link(tt, "-", is_safe_mode?) %></li>
		<% end %>

		<% @tags[:include].to_a.each do |tt| %>
			<li><%= tag_link(tt, "", is_safe_mode?) %></li>
		<% end %>

		<% Tag.find_related(@tags[:related].to_a).each do |tt| %>
			<li><%= tag_link(tt, "", is_safe_mode?) %></li>
		<% end %>
	</ul>
	<!-- google_ad_section_end -->
</div>
