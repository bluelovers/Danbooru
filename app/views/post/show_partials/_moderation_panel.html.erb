<% if !@post.is_active? && @current_user.is_test_janitor_or_higher? %>
  <%= link_to_function "Approve", "if (confirm('Do you really want to approve this post?')) {Post.moderate(#{@post.id}, 'Approve')}" %>
  | <%= link_to_function "Hide from mod queue", "Post.moderate(#{@post.id}, 'Hide')" %>
<% end %>
