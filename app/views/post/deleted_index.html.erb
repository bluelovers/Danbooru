<h4>Deleted Posts</h4>

<table width="100%">
  <thead>
    <tr>
      <th width="5%">Post</th>
      <th width="10%">User</th>
      <th width="35%">Tags</th>
      <th width="50%">Reason</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.id, :action => "show", :id => post.id %></td>
        <td><%= link_to h(post.author), :controller => "user", :action => "show", :id => post.user_id %></td>
        <td><%= h(post.cached_tags) %></td>
        <td><%= h(post.deletion_reason) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="paginator">
  <%= will_paginate(@posts) %>
</div>
