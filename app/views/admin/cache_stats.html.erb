          <td style="text-align: right;"><%= @post_stats["stats/count/level=40"] %></td>
          <td style="text-align: right;"><%= @post_stats["stats/count/level=50"] %></td>
          <td></td>
        </tr>
        <tr>
          <td>0 Tags</td>
          <td style="text-align: right;"><%= number_to_percentage(@post_stats["stats/tags/level=0&tags=0"].to_f / @post_stats["stats/count/level=0"].to_f * 100, :precision => 1) %></td>
          <td style="text-align: right;"><%= number_to_percentage(@post_stats["stats/tags/level=20&tags=0"].to_f / @post_stats["stats/count/level=20"].to_f * 100, :precision => 1) %></td>
