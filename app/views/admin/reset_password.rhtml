<div>
  <h4>Reset Password</h4>

  <% form_tag(:action => "reset_password") do %>
    <table width="100%">
      <tbody>
        <tr>
          <th width="15%"><label class="block" for="user_name">Name</label></th>
          <td width="85%"><%= text_field "user", "name" %></td>
        </tr>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="2">
            <%= submit_tag "Submit" %>
          </td>
        </tr>
      </tfoot>
    </table>
  <% end %>
</div>
