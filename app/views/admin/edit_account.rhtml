<div id="admin-edit-account">
	<% form_tag(:controller => "admin", :action => "edit_account") do %>
		<div class="option">
			<label class="block" for="user_id">User</label>
			<%= text_field "user", "name" %>
		</div>

		<div class="option">
			<label class="block" for="user_level">Level</label>
			<%= select "user", "level", [["Admin", User::LEVEL_ADMIN], ["Mod", User::LEVEL_MOD], ["Member", User::LEVEL_MEMBER], ["Blocked", User::LEVEL_BLOCKED]] %>
		</div>

		<div class="option">
			<%= submit_tag "Save" %>
		</div>
	<% end %>
</div>
