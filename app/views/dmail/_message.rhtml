<div class="message">
  <% if message.to_id == @current_user.id %>
    <h5 class="received"><%= h(message.title) %></h5>
  <% else %>
    <h5 class="sent"><%= h(message.title) %></h5>
  <% end %>
  
  <div style="margin-bottom: 1em;">
    <em>Sent by <%= h message.from.name %> <%= time_ago_in_words(message.created_at) %> ago</em>
  </div>

  <div style="width: 50em;">
    <%= format_text(message.body) %>
  </div>    
</div>
