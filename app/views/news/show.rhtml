<div id="news-show">
  <h4><%= @news_update.title %></h4>
  <%= simple_format @news_update.body %>

  <div id="footer">
    <%= link_to "List", :action => "index" %> |
    <% if @current_user && @current_user.role?(:admin) %>
    	<%= link_to "Edit", :action => "edit", :id => @news_update.id %> |
      <%= link_to "New", :action => "new" %>
    <% end %>
  </div>
</div>
