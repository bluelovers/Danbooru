<div id="comment-list">
  <% if @posts.empty? %>
    <h4>No comments.</h4>
  <% end %>

  <% @posts.each do |post| %>
    <div class="post">
      <div class="col1">
        <%= link_to(image_tag(post.preview_url, :title => post.cached_tags, :class => "preview", :id => "p%i" % post.id), :controller => "post", :action => "show", :id => post.id) %>
      </div>
      <div class="col2" id="comments-for-p<%= post.id %>">
        <div class="header">
          <div>
            <span class="info"><strong>Date</strong> <%= compact_time(post.created_at) %></span>
            <span class="info"><strong>User</strong> <%= link_to h(post.author), :controller => "user", :action => "show", :id => post.user_id %></span>
            <span class="info"><strong>Rating</strong> <%= post.pretty_rating %></span>
            <span class="info">
              <strong>Score</strong> <span id="post-score-<%= post.id %>"><%= post.score %></span> 
              <% if @current_user.is_privileged_or_higher? %>
                (vote <%= link_to_function "up", "Post.vote(1, #{post.id})" %>/<%= link_to_function "down", "Post.vote(-1, #{post.id})" %>)
              <% end %>
            </span>
            <% if post.comments.size > 6 %>
              <span class="info"><strong>Hidden</strong> <%= link_to post.comments.size - 6, :controller => "post", :action => "show", :id => post.id %></span>
            <% end %>
          </div>
          <div class="tags">
            <strong>Tags</strong>
            <% post.cached_tags.split(/ /).each do |name| %>
              <span class="tag-type-<%= Tag.type_name(name) %>">
                <%= link_to h(name.tr("_", " ")), :controller => "post", :action => "index", :tags => name %>
              </span>
            <% end %>
          </div>
        </div>
        <%= render :partial => "comments", :locals => {:comments => post.recent_comments, :post_id => post.id, :hide => true} %>          
      </div>
    </div>
  <% end %>

  <div id="paginator">
    <%= will_paginate(@posts) %>
  </div>
  
  <script type="text/javascript">
    <% @posts.each do |post| %>
      Post.register(<%= post.to_json %>)
    <% end %>
    Post.init_blacklisted({replace: true})
  </script>

  <%= render :partial => "footer" %>
</div>
