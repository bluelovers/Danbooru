<h3>List of Favorites</h3>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Count</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to h(user.pretty_name), :controller => "favorite", :action => "show", :id => user.id %></td>
        <td><%= user.favorite_post_count(:hide_explicit => hide_explicit?) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
