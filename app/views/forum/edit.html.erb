<div id="preview" style="display: none; margin: 1em 0; width: 60em;">
</div>

<% form_tag(:action => "update") do %>
  <%= hidden_field_tag "id", params[:id] %>
  <table>
    <tr><td><label for="forum_post_title">Title</label></td><td><%= text_field "forum_post", "title", :size => 60 %></td></tr>
    <tr><td><label for="forum_post_body">Body</label></td><td><%= text_area "forum_post", "body", :rows => 10, :cols => 60 %></td></tr>
    <tr><td colspan="2">
      <%= submit_tag "Post" %>
      <%= submit_to_remote "preview", "Preview", :url => {:action => "preview"}, :method => :get, :update => "preview", :success => "$('preview').show()" %>
    </td></tr>
  </table>
<% end %>
