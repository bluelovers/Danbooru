<div id="forum-post">
<div class="post original-post">
	<h4>&raquo; <%= @forum_post.title %></h4>
	<h6>by <%= @forum_post.author %></h6>

	<div><%= @forum_post.body %></div>
</div>

<% @forum_post.children.each do |c| %>
	<div class="post">
		<h6>by <%= c.author %></h6>
		<div><%= c.body %></div>
	</div>
<% end %>

<%= link_to "Respond", :action => "add", :parent_id => @forum_post.id %> | <%= link_to "List", :action => "list" %>
</div>
